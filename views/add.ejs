<% include partials/header %>
<h1>ADD DATA</h1>

<div class="container">
  <div id=menu>
    <a class="btn btn-success" href="/">Home</a> | <a class="btn btn-info" href="add">Add</a>

    <br>
    <br>
    <br>
    <!-- //harus ada onsubmit -->
    <form class="form-horizontal" method="post">
      <div class="form-group">
        <label class="control-label col-sm-2" for="string">String:</label>
        <div class="col-sm-10">
          <input id="string" type="text" name = "string" class="form-control">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2" for="number">Integer:</label>
        <div class="col-sm-10">
          <input type="number" step="1" name = "integer" step="1" class="form-control">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2" for="number">Float:</label>
        <div class="col-sm-10">
          <input type="number" class="form-control" name="float" step="0.01" placeholder="Enter float">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2" for="date">Date:</label>
        <div class="col-sm-10">
          <input type="date" class="form-control" name="date" placeholder="Enter date">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2" for="Boolean">Boolean:</label>
        <div class="col-sm-10">
          <select name="boolean" class="form-control">
            <option>Choose the Boolean</option>
            <option>true</option>
            <option>false</option>
          </select>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Submit</button>
        </div>
      </div>
    </form>
    <form action="/add" method="post" onsubmit="return check()">
      <table>
        <tr>
          <!-- //harus ditambah id untuk jadi patokan function -->
        </div>
      </form>
    </div>
    <script type="text/javascript" src="/js/validate.js"></script>
    <% include partials/footer %>
